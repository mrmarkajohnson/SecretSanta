@using Global.Abstractions.Areas.GiftingGroup

@model IUserGiftingGroup

@if (Model.GroupAdmin)
{
    <p>
        <a asp-area="@AreaNames.GiftingGroup" asp-controller="Manage" asp-action="EditGiftingGroup" asp-route-giftingGroupKey="@Model.GiftingGroupKey">
            Edit Gifting Group '@Model.GroupName'
        </a>
    </p>
    <p>
        <a asp-area="@AreaNames.GiftingGroup" asp-controller="Manage" asp-action="SetupGiftingGroupYear" asp-route-giftingGroupKey="@Model.GiftingGroupKey">
            Set Up Group '@Model.GroupName' for @DateTime.Today.Year
        </a>
    </p>
}

<p>
    <a asp-area="@AreaNames.GiftingGroup" asp-controller="Participate" asp-action="Year" asp-route-giftingGroupKey="@Model.GiftingGroupKey">
        View '@Model.GroupName' for @DateTime.Today.Year
    </a>
</p>

<p>
    <a asp-area="@AreaNames.Suggestions" asp-controller="Home" asp-action="AddSuggestion" asp-route-giftingGroupKey="@Model.GiftingGroupKey">
        Add a suggestion to '@Model.GroupName'
    </a>
</p>