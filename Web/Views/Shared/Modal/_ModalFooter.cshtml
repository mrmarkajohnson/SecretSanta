@using ViewLayer.Abstractions

@model IModalVm

<div class="modal-footer">

    @if (Model.ShowSaveButton)
    {
        <div class="d-inline" data-toggle="tooltip" data-html="true" data-bs-html="true" data-bs-container="label" title="Save your changes and close">
            <button type="button" class="btn btn-default">Save</button>
        </div>
        <div class="d-inline" data-toggle="tooltip" data-html="true" data-bs-html="true" data-bs-container="label" title="Close this dialog">
            <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancel</button>
        </div>
    }
    else
    {
        <div class="d-inline" data-toggle="tooltip" data-html="true" data-bs-html="true" data-bs-container="label" title="Close this dialog">
            <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
        </div>
    }
</div>