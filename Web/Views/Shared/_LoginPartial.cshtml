@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto">    
    @if (!SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Manage" asp-action="Register" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Home" asp-action="Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Home" asp-action="ForgotPassword" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Forgot Password</a>
        </li>
    }
</ul>
