@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto">    
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        @* <li class="nav-item">
            <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li> *@
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "", successMessage = "Logged Out Successfully" })">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Manage" asp-action="Register" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Home" asp-action="Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Home" asp-action="ForgotPassword" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Forgot Password</a>
        </li>
    }
</ul>
