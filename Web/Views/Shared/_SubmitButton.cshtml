@using Global.Abstractions.ViewModels

@model IFormVm
@{
    var defaultModel = new BaseFormVm();
    string text = string.IsNullOrEmpty(Model?.SubmitButtonText) ? defaultModel.SubmitButtonText : Model.SubmitButtonText;
    string icon = string.IsNullOrEmpty(Model?.SubmitButtonIcon) ? defaultModel.SubmitButtonIcon : Model.SubmitButtonIcon;
}

<div class="@CenterFlexNoWrapContainer">
    <div class="col-lg-4 col-md-6 col-sm-8 col-10 @CenterFlexNoWrapContainer">
        <button type="submit" class="w-100 btn btn-md btn-primary"><i class="fa @icon"></i> &nbsp; <span class="btn-text">@text</span></button>
    </div>
</div>