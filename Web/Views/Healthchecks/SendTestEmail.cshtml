@using Application.Areas.Messages.ViewModels

@model SendTestEmailVm
@{
    ViewData["Title"] = "Send Test E-mail";
}

<h1>Send a Test E-mail</h1>

<form asp-area="" asp-controller="Healthchecks" asp-action="SendTestEmail" method="post">
    <partial name="_FormHiddenInputs" />

    <div class="row @CenterFlexNoWrapContainer">
        <div class="mb-5">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="@CenterFlexWrapContainer">
                <div class="@StandardGroupWidth">
                    <div class="mb-3">
                        <label asp-for="RecipientEmailAddress" class="control-label"></label>
                        <input type="text" asp-for="RecipientEmailAddress" class="form-control" />
                        <div>
                            <span asp-validation-for="RecipientEmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div class="col-md-12">
            <partial name="_SubmitButton" />
        </div>

    </div>
</form>