@model ChangePasswordVm
@{
    ViewData["Title"] = "Change Password";
}

<h1>Change your password</h1>

<section>
    <form asp-area="Account" asp-controller="Manage" asp-action="ChangePassword" method="post">
        <partial name="_FormHiddenInputs" />
        
        <div class="row d-flex align-items-center justify-content-center text-center">

            <div class="mb-5">
                
                <div class="mt-2 mb-4">
                    <p>
                        Please enter your current password to change your identity, then enter and confirm your new password.
                    </p>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <partial name="_ConfirmCurrentPassword" />

                <partial name="_SetPassword" />

                <br />
                <div class="col-md-12">
                    <partial name="_SubmitButton" />
                </div>
            </div>

        </div>
    </form>
</section>