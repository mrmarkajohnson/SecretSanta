@using Application.Areas.Messages.BaseModels
@using static Global.Settings.MessageSettings

@model EmailDetails
@{
    ViewData["Title"] = "E-mail Preferences";
    string receiveExplanation = "Choose whether you receive any e-mails at all, and if so, only ones marked as 'important' by the sender or system.";
    string detailedExplanation = "If ticked, your e-mails will contain the full message. If not, they will just have a link to it.<br><br>" + 
        "The link-only option is useful if you share an e-mail address, or other people can acces your e-mails.";
}

<h1>Set Your E-mail Preferences</h1>

<section>
    <form asp-area="Account" asp-controller="Manage" asp-action="SetEmailPreferences" method="post">
        <partial name="_FormHiddenInputs" />


        <div class="row @CenterFlexNoWrapContainer">
            <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">

                <p>Here you can choose whether/when to receive e-mails, and what they contain.</p>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="@CenterFlexWrapContainer">
                    <div class="@StandardGroupWidth">

                        <div class="mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control email-input" autocomplete="email" aria-required="false"
                                    placeholder="name@example.com (optional)" />
                            <div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="w-100 d-flex align-items-center justify-content-between">
                                <label asp-for="ReceiveEmails" class="control-label required"></label>
                                <div class="control-label fw-normal">
                                    
                                    @foreach (EmailPreference option in Enum.GetValues<EmailPreference>())
                                    {
                                        <span class="text">option.GetDisplayName()</span>
                                        <input type="radio" asp-for="ReceiveEmails" class="form-check-input receive-option" autocomplete="off" aria-required="false"
                                               value="@option" />
                                        <span>
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                        </span>
                                    }

                                    <partial name="_InlineQuestion" model="@receiveExplanation" />
                                </div>
                            </label>
                        </div>

                        <div class="mb-3">
                            <label class="w-100 d-flex align-items-center justify-content-between">
                                <label asp-for="DetailedEmails" class="control-label required"></label>
                                <div class="input-group input-info">
                                    <div class="control-label fw-normal mt-1">
                                        <input type="checkbox" asp-for="DetailedEmails" class="form-check-input"
                                               autocomplete="off" aria-required="false" /> &nbsp; Yes

                                        &nbsp;
                                        &nbsp;
                                        &nbsp;
                                        &nbsp;

                                        <partial name="_FormInlineQuestion" model="@detailedExplanation" />
                                    </div>
                                </div>
                            </label>
                        </div>

                    </div>
                </div>

                <br />
                <div class="col-md-12">
                    <partial name="_SubmitButton" />
                </div>
            </div>
        </div>
    </form>
</section>