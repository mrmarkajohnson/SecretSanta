@using static Global.Validation.IdentityVal;

@model RegisterVm
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1>Welcome to Secret Santa!</h1>

    <section>
        <form asp-area="Account" asp-controller="Manage" asp-action="Register" method="post">
            <div class="row d-flex align-items-center justify-content-center text-center">

                <div class="mb-5">
                    <h2>Please create an account</h2>

                    <p class="mt-2 mb-4">
                        For security and privacy, e-mail addresses and user names are scrambled in the database.
                    </p>

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <partial name="_SetUserNameAndEmail" />

                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="Password" class="control-label required">Password</label>
                            <div class="input-group input-info">
                                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Create a new password" />
                                <div class="input-group-text"><i class="fa fa-eye collapse"></i></div>
                                <partial name="_InputQuestion" model="@Passwords.Description" />
                            </div>
                            <div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="ConfirmPassword" class="control-label required">Confirm Password</label>
                            <div class="input-group input-info">
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Re-enter your new password" />
                                <div class="input-group-text"><i class="fa fa-eye collapse"></i></div>
                            </div>
                            <div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <partial name="_SetPersonalNames" />

                    <br />
                    <div class="col-md-12">
                        <partial name="_SubmitButton" />
                    </div>
                </div>

            </div>
            <div class="row d-flex align-items-center justify-content-center text-center">

                <div class="col-lg-6 col-md-8 col-sm-10 col-12 d-flex flex-wrap justify-content-between text-center">
                    <div>
                        <a asp-area="Account" asp-controller="Home" asp-action="Login" asp-route-returnUrl="@Model?.ReturnUrl">Already have an account?</a>
                    </div>
                    <div>
                        <a asp-area="Account" asp-controller="Home" asp-action="ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">Forgot your password?</a>
                    </div>
                </div>

            </div>
        </form>
    </section>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
