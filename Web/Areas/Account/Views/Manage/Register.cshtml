@using static Global.Validation.IdentityVal;

@model RegisterVm
@{
    ViewData["Title"] = "Register";
    string emailExplanation = "Not mandatory, but if provided this will only be used to provide updates from your group.";
    string userNameExplanation = "Required if E-mail is not provided; you can use either to log in.";
    string middleNamesExplanation = "This is optional, but may be helpful if someone else has a similar first name and surname";
}

<div class="text-center">
    <h1>Welcome to Secret Santa!</h1>

    <section>
        <form asp-area="Account" asp-controller="Manage" asp-action="Register" method="post">
            <div class="row d-flex align-items-center justify-content-center text-center">

                <div class="mb-5">
                    <h2>Please create an account</h2>

                    <p class="mt-2 mb-4">
                        For security and privacy, e-mail addresses and user names are scrambled
                        in the database.
                    </p>

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="input-group input-info">
                                <input asp-for="Email" class="form-control email-input" autocomplete="email" aria-required="false" placeholder="name@example.com" />
                                <partial name="_InputQuestion" model="@emailExplanation" />
                            </div>
                            <div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex mb-3">
                        <div class="col-lg-3 col-md-2 col-sm-1 d-none d-sm-inline-block"></div>
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-8 col-8">
                            <label asp-for="UserName" class="control-label"></label>
                            <div class="input-group input-info">
                                <input asp-for="UserName" class="form-control username-input" autocomplete="username" aria-required="false" placeholder="Create a username" />
                                <partial name="_InputQuestion" model="@userNameExplanation" />
                            </div>
                            <div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group-ib col-md-3 col-sm-3 col-4">
                            &nbsp;
                            <div class="use-email-checkbox-container" style="display:none">                                
                                <label class="control-label pt-1 ps-2">
                                    &nbsp;
                                    Use E-mail
                                    &nbsp;
                                    <input type="checkbox" class="form-check-input use-email-checkbox" />                                    
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="Password" class="control-label required">Password</label>
                            <div class="input-group input-info">
                                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Create a new password" />
                                <div class="input-group-text"><i class="fa fa-eye collapse"></i></div>
                                <partial name="_InputQuestion" model="@Passwords.Description" />
                            </div>
                            <div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="ConfirmPassword" class="control-label required">Confirm Password</label>
                            <div class="input-group input-info">
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Re-enter your new password" />
                                <div class="input-group-text"><i class="fa fa-eye collapse"></i></div>
                            </div>
                            <div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="Forename" class="control-label required"></label>
                            <input asp-for="Forename" class="form-control" autocomplete="firstname" aria-required="true" placeholder="Enter your first name here" />
                            <div>
                                <span asp-validation-for="Forename" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="MiddleNames" class="control-label"></label>
                            <div class="input-group input-info">
                                <input asp-for="MiddleNames" class="form-control" autocomplete="middlenames" aria-required="false" placeholder="Enter any middle names here" />
                                <partial name="_InputQuestion" model="@middleNamesExplanation" />
                            </div>
                            <div>
                                <span asp-validation-for="MiddleNames" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="Surname" class="control-label required"></label>
                            <input asp-for="Surname" maxlength="250" class="form-control" autocomplete="surname" aria-required="true" placeholder="Enter your surname here" />
                            <div>
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="col-md-12">
                        <partial name="_SubmitButton" />
                    </div>
                </div>

            </div>
            <div class="row d-flex align-items-center justify-content-center text-center">

                <div class="col-lg-6 col-md-8 col-sm-10 col-12 d-flex flex-wrap justify-content-between text-center">
                    <div>
                        <a asp-area="Account" asp-controller="Home" asp-action="Login" asp-route-returnUrl="@Model?.ReturnUrl">Already have an account?</a>
                    </div>
                    <div>
                        <a asp-area="Account" asp-controller="Home" asp-action="ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">Forgot your password?</a>
                    </div>
                </div>

            </div>
        </form>
    </section>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
