@model ForgotPasswordVm
@{
    ViewData["Title"] = "Forgot Password";
    string greetingExplanation = "This is the greeting shown when you log in.";
}

<h1>Forgot your password?</h1>

<section>
    <form asp-area="Account" asp-controller="Home" asp-action="ForgotPassword" method="post">
        <partial name="_FormHiddenInputs" />

        <div class="row @CenterFlexNoWrapContainer">

            <div class="mb-5">

                @if (Model.ShowBasicDetails)
                {
                    <div class="hidden">
                        <input asp-for="ShowBasicDetails" type="hidden" />
                    </div>
                        
                    <h2>Please provide your details</h2>
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <p class="mb-4">
                        Enter your account details below to find your account.
                    </p>

                    <div class="@CenterFlexWrapContainer">
                        <div class="@StandardGroupWidth">

                            <div class="mb-3">
                                <label asp-for="EmailOrUserName" class="control-label required"></label>
                                <div class="input-group input-info">
                                    <input asp-for="EmailOrUserName" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                                    <partial name="_InputQuestion" model="@StandardPhrases.EmailOrUserNameExplanation" />
                                </div>
                                <div>
                                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                                </div>
                            </div>
                    
                            <div class="mb-3">
                                <label asp-for="Forename" class="control-label required"></label>
                                <input asp-for="Forename" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your first name here" />
                                <div>
                                    <span asp-validation-for="Forename" class="text-danger"></span>
                                </div>
                            </div>                            

                            <div class="mb-3">
                                <label asp-for="Greeting" class="control-label required"></label>
                                <div class="input-group input-info">
                                    <select asp-for="Greeting" class="form-control" autocomplete="off" aria-required="true" placeholder="Select your greeting here">
                                        <option value=@string.Empty>Please Select...</option>
                                        @foreach (string message in Greetings.Messages.OrderBy(x => x).ToList())
                                        {
                                            <option value="@message">@message</option>
                                        }
                                    </select>
                                    <partial name="_InputInfo" model="@greetingExplanation" />
                                </div>
                                <div>
                                    <span asp-validation-for="Greeting" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="hidden">
                        <input asp-for="EmailOrUserName" type="hidden" />
                        <input asp-for="Forename" type="hidden" />
                        <input asp-for="Greeting" type="hidden" />
                        <input asp-for="SecurityQuestion1" type="hidden" />
                        <input asp-for="SecurityQuestion2" type="hidden" />
                        <input asp-for="SecurityHint1" type="hidden" />
                        <input asp-for="SecurityHint2" type="hidden" />
                    </div>

                    if (Model.ShowSecurityQuestions)
                    {
                        <div class="hidden">
                            <input asp-for="ShowSecurityQuestions" type="hidden" />
                        </div>

                        <h2>Answer your security questions</h2>
                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        @if (Model.SecurityHint1.NotEmpty() || Model.SecurityHint2.NotEmpty())
                        {
                            <p>
                                Now please answer the questions below to confirm your identity.
                            </p>
                            <p class="mb-4">
                                Hover over the information circle(s) for hints.
                            </p>
                        }
                        else
                        {
                            <p class="mb-4">
                                Now please answer the questions below to confirm your identity.
                            </p>
                        }

                        <div class="@CenterFlexWrapContainer">
                            <div class="@StandardGroupWidth">

                                <div class="mb-3">
                                    <label asp-for="SecurityAnswer1" class="control-label required">@Model.SecurityQuestion1</label>
                                    <div class="input-group input-info">
                                        <input type="text" asp-for="SecurityAnswer1" class="form-control hide-text" aria-required="true" placeholder="Enter the answer"
                                                autocomplete="off" />
                                        <div class="input-group-text"><i class="fa fa-eye collapse"></i></div>
                                        <partial name="_InputInfo" model="@Model.SecurityHint1" />
                                    </div>
                                    <div>
                                        <span asp-validation-for="SecurityAnswer1" class="text-danger"></span>
                                    </div>
                                </div>                                
                       
                                <div class="mb-3">
                                    <label asp-for="SecurityAnswer2" class="control-label required">@Model.SecurityQuestion2</label>
                                    <div class="input-group input-info">
                                        <input type="text" asp-for="SecurityAnswer2" class="form-control hide-text" aria-required="true" placeholder="Enter the answer"
                                                autocomplete="off" />
                                        <div class="input-group-text"><i class="fa fa-eye collapse"></i></div>
                                        <partial name="_InputInfo" model="@Model.SecurityHint2" />
                                    </div>
                                    <div>
                                        <span asp-validation-for="SecurityAnswer2" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Model.ResetPassword)
                    {
                        <div class="hidden">
                            <input asp-for="ShowSecurityQuestions" type="hidden" />
                            <input asp-for="SecurityAnswer1" type="hidden" />
                            <input asp-for="SecurityAnswer2" type="hidden" />
                            <input asp-for="ResetPassword" type="hidden" />
                        </div>

                        <h2>Reset your password</h2>
                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <p class="mb-4">
                            Finally, please enter and confirm your new password.
                        </p>

                        <partial name="_SetPassword" />
                    }
                }

                <br />
                <div class="col-md-12">
                    <partial name="_SubmitButton" />
                </div>
            </div>
        </div>
    </form>
</section>