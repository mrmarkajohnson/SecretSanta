@using ViewLayer.Models.Partners

@model RelationshipsVm
@{
    ViewData["Title"] = "Manage Your Relationships";
}

<partial name="_SuccessMessage" />

<h1>Manage Your Relationships</h1>

<div class="row d-flex align-items-center justify-content-center text-center">

    <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">
        <p>
            Here you can tell Santa if you're in a relationship with another group member, to avoid swapping Secret Santa presents with them.
        </p>
        <p>
            If your relationship didn't work out, Santa is very sorry, but you can still avoid selecting each other, unless you decide to ignore an old relationship.
        </p>
    </div>

    <div class="ps-4 pe-4 col-12 col-md-10">
        <partial name="_RelationshipsTable" />
    </div>
    <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">
        <p>
            <a asp-area="Partners" asp-controller="Manage" asp-action="AddRelationship">Add a Relationship</a>
        </p>
    </div>
</div>