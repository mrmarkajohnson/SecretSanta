@using ViewLayer.Models.Partners
@using Web.Helpers

@model AddRelationshipVm
@{
    ViewData["Title"] = "Add Relationship";
}

<h1>Add A Relationship</h1>

<div class="row d-flex align-items-center justify-content-center text-center">

    <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">
        <p>
            Here you can select your current partner, from a list of other people in your group(s).
        </p>
    </div>

    <div class="ps-4 pe-4 col-12 col-md-10">
        <div class="user-grid-container"
             data-url="@Url.Action(Context, "AddRelationship", "Manage", "Partners")">
            <partial name="_SelectUserGrid" model="@Model.PossiblePartners" />
        </div>
    </div>
</div>