@model AddRelationshipVm
@{
    ViewData["Title"] = "Add Relationship";
}

<h1>Add A Relationship</h1>

<div class="row @CenterFlexNoWrapContainer">

    <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">
        <p>
            Here you can select your current partner from a list of other people in your group(s).
            You only need to add a relationship if you'd like to avoid exchanging Secret Santa gifts with your current or ex-partner.
        </p>
        <p>
            If your partner isn't listed, they may not be in your group(s) yet, or your relationship may already be recorded
            <a href="@Model.ManageRelationshipsLink" data-toggle="tooltip" title="Manage Your Relationships">here</a>.
        </p>
    </div>

    <div class="@StandardFullWidthGridContainer">
        <div class="user-grid-container" data-url="@Url.Action(Context, "AddRelationship", "Manage", "Partners")">
            <partial name="_SelectUserGrid" model="@Model.UserGridModel" />
            @* @Html.AjaxGrid(Url.Action("SelectRelationshipUserGrid"), new { id = "select-user-grid" }) *@
        </div>
    </div>
</div>