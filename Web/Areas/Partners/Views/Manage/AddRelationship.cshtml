@using Global.Abstractions.Global.Shared

@model IEnumerable<IVisibleUser>
@{
    ViewData["Title"] = "Add Relationship";
}

<h1>Add A Relationship</h1>

<div class="row d-flex align-items-center justify-content-center text-center">

    <div class="mb-5 mt-2">
        <p>
            Here you can select your current partner, from a list of other people in your group(s).
        </p>
    </div>

    <div class="ps-4 pe-4 col-12 col-md-10">
        <div class="user-grid-container" data-url="@Url.Action("AddRelationship", "Manage", new { Area = "Partners" }, Context.Request.Scheme, Context.Request.Host.ToString())">
            <partial name="_SelectUserGrid" />
        </div>
    </div>
</div>