@using Application.Areas.GiftingGroup.ViewModels
@model SetupGiftingGroupYearVm

<div class="mvc-grid mvc-grid-excel-mode" data-name=@string.Empty data-filter-mode="Excel" data-url=string.Empty>
    <div class="mvc-grid-table">
        <table>
            <thead>
                <tr class="mvc-grid-headers">
                    <th>
                        <span class="mvc-grid-title">Name</span>
                    </th>
                    <th>
                        <span class="mvc-grid-title">@UserDisplayNames.UserName</span>
                    </th>
                    <th>
                        <span class="mvc-grid-title">Participating</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.GroupMembers.Count; i++)
                {
                    YearGroupUserBase user = Model.GroupMembers[i];

                    <tr>
                        <td>
                            <span class="hidden">
                                <input type="hidden" asp-for="GroupMembers[i].SantaUserKey" />
                                <partial name="_UserHiddenInputs" for="GroupMembers[i]" />
                            </span>
                            <span class="nowrap">@user.UserDisplayName <partial name="_UserInfoCard" model="@user" /></span>
                        </td>
                        <td>@user.UserName</td>
                        <td>
                            <span class="text-secondary">No</span> 
                            <input type="radio" asp-for="GroupMembers[i].Included" value="@false" />

                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;

                            <span class="text-primary">Yes</span> 
                            <input type="radio" asp-for="GroupMembers[i].Included" value="@true" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>