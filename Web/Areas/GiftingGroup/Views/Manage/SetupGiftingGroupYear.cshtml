@using System.Linq

@model SetGiftingGroupYearVm
@{
    ViewData["Title"] = $"Year Setup";
    string limitExplanation = $"Set the limit for members to spend on each other this year, in {Model.CurrencyCode}";
    string calculateTitle = Model.Calculated ? "Assign givers and receivers?" : "Reassign givers and receivers?";
    string calculateExplanation = Model.Calculated 
        ? "Calculate the Secret Santa recipient for each participating member" 
        : "Realculate the Secret Santa recipient for each participating member, cancelling out all previous givers and receivers";
}

<h1>Set Up '@Model.GiftingGroupName' for @Model.Year</h1>

<section>
    <form asp-area="GiftingGroup" asp-controller="Manage" asp-action="SetUpGiftingGroupYear" method="post">
        <partial name="_FormHiddenInputs" />

        <div class="row d-flex align-items-center justify-content-center text-center">

            <div class="collapse">
                <input type="hidden" asp-for="GiftingGroupId">
                <input type="hidden" asp-for="GiftingGroupName">
                <input type="hidden" asp-for="CurrencyCode">
                <input type="hidden" asp-for="CurrencySymbol">
                <input type="hidden" asp-for="Calculated">
                <input type="hidden" asp-for="RecalculationRequired">
            </div>

            <div class="mb-5 mt-2">
                <p>
                    Set the spending limit and participating members for the '@Model.GiftingGroupName' group in @Model.Year.
                    Once everything is ready, you can trigger to match givers and receivers at random.
                </p>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <br />

                <div class="col-md-12">
                    <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                        <label asp-for="Limit" class="control-label"></label>
                        <div class="input-group input-info">
                            <div class="input-group-text">@Model.CurrencySymbol</div>
                            <input asp-for="Limit" class="form-control" />
                            <partial name="_InputQuestion" model="@limitExplanation" />
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                        <label asp-for="Calculate" class="control-label">@calculateTitle</label>
                        <div class="control-label fw-normal">
                            <input type="checkbox" asp-for="Calculate" class="form-check-input" autocomplete="off" aria-required="false" /> &nbsp; Yes

                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;

                            <div class="d-inline" data-toggle="tooltip" data-html="true" data-bs-container="label" title="@calculateExplanation">
                                <i class="fa fa-circle-question fa-border"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </<div>

           <br />

            <div class="mb-5 mt-2">
                <h2>Participating group members</h2>
                <p>
                    Here you can control which group members will participate this year.
                </p>
                <br />

                <div class="col-md-12 d-flex align-items-center justify-content-center text-center">
                    <div class="ps-4 pe-4 col-12 col-md-10">
                        <partial name="_GiftingGroupYearMembersTable" />
                    </div>
                </div>

                <br />
                <div class="col-md-12">
                    <partial name="_SubmitButton" />
                </div>
            </div>

        </div>
    </form>
</section>