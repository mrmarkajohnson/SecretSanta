@using Application.Areas.GiftingGroup.ViewModels
@model JoinerApplicationsVm
@{
    bool singleApplication = Model.ApplicationsCount == 1;

    Func<IReviewApplication, object> actions = 
    @<text>
        <a asp-action="ReviewJoinerApplication" asp-controller="Manage" asp-area="GiftingGroup" data-toggle="tooltip" title="Review Application"
                asp-route-groupApplicationKey="@item.GroupApplicationKey" asp-route-singleApplication="@singleApplication">
            <i class="fa fa-pencil"></i>
        </a>
    </text>;

    Func<IReviewApplication, object> applicant =
    @<text>
        @item.ApplicantName
        <partial name="_UserInfoCard" model="@item" />
    </text>;
}

@(Html
    .Grid(Model.Applications)
    .Build(columns =>
    {
        columns.Add(x => x.GroupName).Titled("Group Name");
        columns.Add(x => x.ApplicantName).RenderedAs(applicant).Titled("Applicant Name");
        columns.Add(x => x.UserName).Titled(UserDisplayNames.UserName);
        columns.Add(x => x.NonNullableEmail).Titled(UserDisplayNames.Email);
        columns.Add().RenderedAs(actions).Titled("Actions").Encoded(false).Css("nowrap");
    })
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<int, string> { { 0, "All" }, { 10, "10" }, { 20, "20" }, { 50, "50" } };
        pager.ShowPageSizes = true;
    })
    .UsingUrl(Url.Action("JoinerApplicationsGrid") ?? "")
    .Empty("No active applications found")
    .Id("joiner-applications-grid")
    .Filterable()
    .Sortable()
)
