@using ViewLayer.Models.GiftingGroup

@using System.Linq

@model ReviewJoinerApplicationVm
@{
    ViewData["Title"] = "Review Joiner Application";
}

<h1>Review Joiner Application</h1>

<section>
    <form asp-area="GiftingGroup" asp-controller="Manage" asp-action="ReviewJoinerApplication" method="post">
        <div class="row d-flex align-items-center justify-content-center text-center">

            <div class="collapse">
                <input type="hidden" asp-for="ApplicationId">
                <input type="hidden" asp-for="Name">
                <input type="hidden" asp-for="UserName">
                <input type="hidden" asp-for="EmailAddress">
                <input type="hidden" asp-for="GroupName">
            </div>

            <div class="mb-5 mt-2">
                <p>
                    @Model.Name has asked to join group '@Model.GroupName'. Can they join?
                </p>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <br />

                <div class="col-md-12">
                    <div class="form-group-ib col-lg-3 col-md-4 col-sm-5 col-6 mb-3">
                        <label asp-for="Name" class="control-label required"></label>
                        <div class="control-label fw-normal">
                            @Model.Name
                        </div>
                    </div>
                    <div class="form-group-ib col-lg-3 col-md-4 col-sm-5 col-6 mb-3">
                        <label asp-for="UserName" class="control-label required"></label>
                        <div class="control-label fw-normal">
                            @Model.UserName
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.EmailAddress))
                {
                    <div class="col-md-12">
                        <div class="form-group-ib col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                            <label asp-for="EmailAddress" class="control-label required"></label>
                            <div class="control-label fw-normal">
                                @Model.EmailAddress
                            </div>
                        </div>
                    </div>
                }

                <br />
                <div class="col-md-12">
                    <partial name="_SubmitButton" />
                </div>
            </div>

        </div>
    </form>
</section>