@using ViewLayer.Models.GiftingGroup

@using System.Linq

@model ReviewJoinerApplicationVm
@{
    ViewData["Title"] = "Review Joiner Application";
    string allowExplanation = $"Allow {Model.ApplicantName} to join the group?";
    string rejectionMessageExplanation = $"If not allowing {Model.ApplicantName} to join, please explain why."
        + " Required if rejecting the application withou blocking future applications.";
    string blockExplanation = $"{Model.ApplicantName} has already tried to join this group at least twice, and been rejected both times."
        + " Block them from sending any future applications?";
}

<h1>Review Joiner Application</h1>

<section>
    <form asp-area="GiftingGroup" asp-controller="Manage" asp-action="ReviewJoinerApplication" class="review-application" method="post">
        <partial name="_FormHiddenInputs" />

        <div class="row d-flex align-items-center justify-content-center text-center">

            <div class="collapse">
                <input type="hidden" asp-for="ApplicationId">
                <input type="hidden" asp-for="ApplicantName">
                <input type="hidden" asp-for="UserName">
                <input type="hidden" asp-for="Email">
                <input type="hidden" asp-for="GroupName">
                <input type="hidden" asp-for="SingleApplication" />
                <input type="hidden" asp-for="CurrentYearCalculated" />
            </div>

            <div class="mb-5 mt-2">
                <p>
                    @Model.ApplicantName has asked to join group '@Model.GroupName'. Can they join?
                </p>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <br />

                <div class="col-md-12">
                    <div class="form-group-ib col-lg-3 col-md-4 col-sm-5 col-6 mb-3">
                        <label asp-for="ApplicantName" class="control-label"></label>
                        <div class="control-label fw-normal">
                            @Model.ApplicantName
                        </div>
                    </div>
                    <div class="form-group-ib col-lg-3 col-md-4 col-sm-5 col-6 mb-3">
                        <label asp-for="UserName" class="control-label"></label>
                        <div class="control-label fw-normal">
                            @Model.UserName
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    @if (!string.IsNullOrWhiteSpace(Model.Email))
                    {
                        <div class="form-group-ib col-lg-3 col-md-4 col-sm-5 col-6 mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="control-label fw-normal">
                                @Model.Email
                            </div>
                        </div>
                    }

                    <div class="form-group-ib col-lg-3 col-md-4 col-sm-5 col-6 mb-3">
                        <label asp-for="AcceptedOption" class="control-label required"></label>
                        <div class="control-label fw-normal">
                            <input type="radio" asp-for="AcceptedOption" class="form-check-input accepted-option" autocomplete="off" aria-required="true"
                                   value="true" /> &nbsp; Yes
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;

                            <input type="radio" asp-for="AcceptedOption" class="form-check-input accepted-option" autocomplete="off" aria-required="true"
                                   value="false" /> &nbsp; No
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;

                            <div class="d-inline" data-toggle="tooltip" data-html="true" data-bs-container="label" title="@allowExplanation">
                                <i class="fa fa-circle-question fa-border"></i>
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="AcceptedOption" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="accepted-section collapse">
                    <div class="@StandardFormGroup">
                        <br />

                        @if (Model.CurrentYearCalculated)
                        {
                            <div class="alert alert-warning">
                                <text>@Model.Forename <span style="font-weight: bold; font-style: italic;">won't</span> be added to the current year automatically, as givers and recipients have already been assigned.</text>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <text>@Model.Forename will be added to the current year automatically. You can remove them by editing the group's settings for @DateTime.Today.Year.</text>
                            </div>
                        }
                    </div>
                </div>

                <div class="rejected-section collapse">
                    <div class="col-md-12">
                        <div class="@StandardFormGroup">
                            <label asp-for="RejectionMessage" class="control-label"></label>
                            <div class="input-group input-info">
                                <textarea asp-for="RejectionMessage" class="form-control"></textarea>
                                <partial name="_InputQuestion" model="@rejectionMessageExplanation" />
                            </div>
                        </div>
                    </div>

                    @if (Model.PreviousRequestCount > 2)
                    {
                        <div class="col-md-12">
                            <div class="@StandardFormGroup">
                                <label asp-for="Blocked" class="control-label"></label>
                                <div class="control-label fw-normal">
                                    <input type="checkbox" asp-for="Blocked" class="form-check-input" autocomplete="off" aria-required="false" /> &nbsp; Yes

                                    &nbsp;
                                    &nbsp;
                                    &nbsp;
                                    &nbsp;

                                    <div class="d-inline" data-toggle="tooltip" data-html="true" data-bs-container="label" title="@blockExplanation">
                                        <i class="fa fa-circle-question fa-border"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <br />
                <div class="col-md-12">
                    <partial name="_SubmitButton" />
                </div>
            </div>

        </div>
    </form>
</section>