@using Microsoft.AspNetCore.Http.Extensions
@using ViewLayer.Models.Participate

@model ManageUserGiftingGroupYearVm
@{
    ViewData["Title"] = $"'{Model.GiftingGroupName}' for {Model.CalendarYear}";
    string includedExplanation = Model.Recipient != null ? GiftingGroupNames.NoOptOutWithRecipient : "Will you join in this year?";
    string limitExplanation = $"The suggested limit for members to spend on each other this year, in {Model.CurrencyCode}";
    string recipientExplanation = "The person who you will be giving to this year";
    bool radiosReadonly = !Model.CanChangeIncluded;
    string lastYearExplanation = $"If you were involved in {Model.CalendarYear - 1}, and can remember who you gave to, please tell Santa";
    string previousYearExplanation = $"If you were involved in {Model.CalendarYear - 2}, and can remember who you gave to, please tell Santa";    
    string includedRadioClass = Model.SubmitIncludedChangeImmediately ? "included-radio" : ""; // the class is used by JavaScript to submit the change
}

<h1>View and Participate in '@Model.GiftingGroupName' for @Model.CalendarYear</h1>

<section>
    <form asp-area="GiftingGroup" asp-controller="Participate" asp-action="Year" asp-route-giftingGroupKey="@Model.GiftingGroupKey" method="post">

        <partial name="_FormHiddenInputs" />

        <div class="row @CenterFlexNoWrapContainer">

            <div class="collapse">
                <input type="hidden" asp-for="GiftingGroupKey">
                <input type="hidden" asp-for="GiftingGroupName">
                <input type="hidden" asp-for="Limit">
                <input type="hidden" asp-for="CurrencyCode">
                <input type="hidden" asp-for="CurrencySymbol">
                <input type="hidden" asp-for="CalendarYear">
                <input type="hidden" asp-for="PreviousYearsRequired">
                <input type="hidden" asp-for="IncludePreviousYears">

                @if (Model.Recipient != null)
                {
                    <partial name="_UserHiddenInputs" for="Recipient" />
                }
            </div>

            <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">
                <p>
                    A gifting group is a group of people who exchange 'Secret Santa' gifts at Christmas.
                </p>
                <p>
                    Here you can choose whether participate in the group this year, and view the group limit and who you are giving to etc.
                </p>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <br />

                <div class="@CenterFlexWrapContainer">
                    <div>

                        <div class="mb-3">
                            <label asp-for="Included" class="control-label"></label>
                            <div data-url="@Url.Action(Context, "Year", "Participate", "GiftingGroup")" class="control-label fw-normal">
                                <span class="text-secondary">No</span> 
                                <input type="radio" asp-for="Included" value="@false" class="@includedRadioClass" readonly=@radiosReadonly />
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                &nbsp;

                                <span class="text-primary">Yes</span> 
                                <input type="radio" asp-for="Included" value="@true" class="@includedRadioClass" readonly=@radiosReadonly />
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                &nbsp;

                                <partial name="_FormInlineQuestion" model="@includedExplanation" />
                            </div>
                            <div>
                                <span asp-validation-for="Included" class="text-danger"></span>
                            </div>
                        </div>

                        @if (Model.IncludePreviousYears)
                        {
                            <div class="mb-3">
                                <label asp-for="LastRecipientUserId" class="control-label"></label>
                                <div class="input-group input-info">
                                    <select asp-for="LastRecipientUserId" asp-items="Model.OtherMembersSelect" class="form-control culture-info-select" aria-required="false">
                                        <option value="@null">Don't remember, or not listed</option>
                                    </select>
                                    <partial name="_InputQuestion" model="@lastYearExplanation" />
                                </div>
                                <div>
                                    <span asp-validation-for="LastRecipientUserId" class="text-danger"></span>
                                </div>
                            </div>

                            @if (Model.PreviousYearsRequired > 1)
                            {
                                <div class="mb-3">
                                    <label asp-for="PreviousRecipientUserId" class="control-label"></label>
                                    <div class="input-group input-info">
                                        <select asp-for="PreviousRecipientUserId" asp-items="Model.OtherMembersSelect" class="form-control culture-info-select" aria-required="false">
                                            <option value="@null">Don't remember, or not listed</option>
                                        </select>
                                        <partial name="_InputQuestion" model="@previousYearExplanation" />
                                    </div>
                                    <div>
                                        <span asp-validation-for="PreviousRecipientUserId" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        }

                        <div class="mb-3">
                            <label asp-for="Limit" class="control-label"></label>
                            <div class="control-label fw-normal">
                                <text>@Model.LimitString</text>
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                &nbsp;

                                <partial name="_FormInlineQuestion" model="@limitExplanation" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Recipient" class="control-label"></label>
                            <div class="control-label fw-normal">
                                <text>
                                    @Model.RecipientString

                                    @if (Model.Recipient != null)
                                    {
                                        <partial name="_UserInfoCard" model="@Model.Recipient" />
                                    }
                                </text>
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                &nbsp;

                                <partial name="_FormInlineQuestion" model="@recipientExplanation" />
                            </div>
                        </div>

                    </div>
                </div>

                @if (Model.Recipient != null)
                {
                    <div class="mt-2 align-items-center justify-content-center align-content-center">
                        <div>
                            <h2>Suggestions</h2>

                            <p class="mb-4">@Model.Recipient.DisplayFirstName() has made the following suggestions for gift ideas.</p>

                            <div class="col-md-12 @CenterFlexNoWrapContainer">
                                <div class="@StandardFullWidthGridContainer">
                                    <partial name="_RecipientSuggestionsGrid" model="Model.RecipientSuggestions" />
                                </div>
                            </div>

                            <p class="mt-3 mb-4">You can manage your own suggestions using the links below.</p>
                        </div>
                    </div>
                }

                @if (!Model.SubmitIncludedChangeImmediately)
                {
                    <br />
                    <div class="col-md-12">
                        <partial name="_SubmitButton" />
                    </div>
                }

            </div>
        </div>

        <div class="row @CenterFlexNoWrapContainer">

            <div class="@StandardGroupWidth @EvenSpacingFlexGroup">
                @if (Model.GroupAdmin)
                {            
                    <div>
                        <a asp-area="GiftingGroup" asp-controller="Manage" asp-action="SetupGiftingGroupYear" asp-route-giftingGroupKey="@Model.GiftingGroupKey"
                            asp-route-returnUrl="@Context.Request.GetEncodedUrl()">
                            Set Up Group '@Model.GiftingGroupName' for @Model.CalendarYear
                        </a>
                    </div>
                }

                <div>
                    <a asp-area="Suggestions" asp-controller="Home" asp-action="Index">
                        Manage Suggestions
                    </a>
                </div>

                <div>
                    <a asp-area="Suggestions" asp-controller="Home" asp-action="AddSuggestion" asp-route-giftingGroupKey="@Model.GiftingGroupKey">
                        Add A Suggestion
                    </a>
                </div>
            </div>

        </div>

    </form>
</section>
