@using Global.Abstractions.Areas.Messages

@model ViewMessagesVm
@{
    ViewData["Title"] = "Messages";
}

<h1>Messages</h1>

<div class="row @CenterFlexNoWrapContainer">

    <div class="mb-5 mt-2 align-items-center justify-content-center align-content-center">
        <p>
            Here you can read your messages. Unread messages are in red. Messages marked 'important' are in bold text.
        </p>
    </div>

    <div class="collapse">
        <input asp-for="MessageKey" id="messageKey" />
        <input asp-for="MessageRecipientKey" id="messageRecipientKey" />
    </div>

    <div class="@StandardFullWidthGridContainer">
        <partial name="_MessagesGrid" model="@Model.Messages" />
        @* @Html.AjaxGrid(Url.Action("MessagesGrid"), new { id = "messages-grid" }) *@
    </div>

    <div class="row @CenterFlexNoWrapContainer mt-4">

        <div class="@StandardGroupWidth @EvenSpacingFlexGroup">
            <div>
                <a asp-area="Messages" asp-controller="Home" asp-action="SentMessages">
                    Sent Messages
                </a>
            </div>
            <div>
                <a asp-area="Messages" asp-controller="Home" asp-action="WriteMessage">
                    Write a Message
                </a>
            </div>
        </div>

    </div>
</div>