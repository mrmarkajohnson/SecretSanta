@using Global.Abstractions.Global.Messages
@using System.Web
@using Global.Extensions.System
@using Web.Extensions
@using Web.Helpers

@model IReadMessage

<div class="modal santa-modal" tabindex="-1" id="viewMessageModal" data-close-url="@Url.Action(Context, "MarkMessageRead", "Home", "Messages")" data-id="@Model.Id" data-read="@Model.Read">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header align-items-center justify-content-center">
                <h4 class="modal-title text-center w-100">@Model.HeaderText</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row d-flex align-items-center justify-content-center text-center">

                    <div class="col-11">
                        <div class="form-group-ib col-12 mb-3">
                            <label asp-for="Sent" class="control-label"></label>
                            <div class="control-label fw-normal">
                                @Model.Sent.ToDateTimeString()
                            </div>
                        </div>
                    </div>

                    <div class="col-11">
                        <div class="mb-3 d-flex">
                            <div class="form-group-ib col-6">
                                <label asp-for="SenderName" class="control-label"></label>
                                <div class="control-label fw-normal">
                                    @Model.SenderName
                                </div>
                            </div>
                            <div class="form-group-ib col-6">
                                <label asp-for="RecipientTypes" class="control-label"></label>
                                <div class="control-label fw-normal">
                                    @Model.RecipientTypes.DisplayName()
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-11">
                        <div class="form-group-ib col-12 mb-3">
                            <label asp-for="HeaderText" class="control-label"></label>
                            <div class="control-label fw-normal">
                                @Model.HeaderText
                            </div>
                        </div>
                    </div>

                    <div class="col-11">
                        <div class="form-group-ib col-12 mb-3">
                            <label asp-for="MessageText" class="control-label"></label>
                            <div class="control-label fw-normal">
                                @Model.MessageText.ToRawHtml()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
            </div>
        </div>
    </div>
</div>